<p id="notice"><%= notice %></p>

<h1>チャット</h1>

<table>
  <thead>
    <tr>
      
      <th>テキスト</th>
      <th>時間</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.text %></td>
        <td><%= post.time %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
    <input type="text" name="first-name" value="" placeholder="表示">
    
    <label for="message-body"></label>
    
    <label for="message-body"></label>
    
    <textarea id="message-body" type="text" name="message-body" placeholder="本文を入力"></textarea>
    
  </tbody>
</table>

<br>

